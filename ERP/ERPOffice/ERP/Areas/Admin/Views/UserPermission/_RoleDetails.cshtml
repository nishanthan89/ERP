@model IEnumerable<ERP.Admin.ViewModels.UserRoleViewModel>



    <div class="col col-md-7">
        @Html.Partial("Message")
        <table class="table table-striped table-hover">
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(m => m.RoleName)</th>
                <th>@Html.DisplayNameFor(m => m.SelectPermissions)</th>
                <th>@Html.DisplayNameFor(m => m.SelectUsers)</th>
                <th></th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a onclick="javascript:EditRole('@item.RoleName')" href="#"><span class="glyphicon glyphicon-pencil text-success" data-toggle="tooltip" title="Edit"></span></a>
                        </td>
                        <td>@item.RoleName</td>
                        <td>
                            @foreach (var peritem in item.PermissionList)
                            {
                                @peritem.Permission
                                break;
                            }
                        </td>
                        <td>
                            @foreach (var useritem in item.UserList)
                            {
                                @useritem.Username
                                break;
                            }
                        </td>
                        <td>
                            <a href="#">
                                <span class="glyphicon glyphicon-trash text-danger" data-toggle="tooltip"  title="Delete" onclick="DeleteRole('@item.RoleName')"></span>
                            </a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}