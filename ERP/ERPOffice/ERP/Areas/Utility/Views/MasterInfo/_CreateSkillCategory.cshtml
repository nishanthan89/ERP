@Scripts.Render("~/bundles/jqueryval")

<script>
    function Save(status) {
        console.log("inside save");
        if (status.success == true) {
            $.get('@Url.Action("CreateSkillCategory", "MasterInfo")',
                      function (result) {
                          $("#CreateDiv").html(result);
                      });
            console.log(status);
            successMessage(status.errorMsg, 'Success');
        }
        else {
            //console.log(status);
            //successMessage(result.errorMsg, 'Error');
            $("#CreateDiv").html(status);
        }
        $.post('@Url.Action("GetSkillCategoryList", "MasterInfo")',
                function (result) {
                    $("#SListDiv").html(result);
                });
    }

    function Cancel() {
        $.get('@Url.Action("CreateSkillCategory", "MasterInfo")',
                              function (result) {
                                  $("#CreateDiv").html(result);
                              });
    }
</script>
