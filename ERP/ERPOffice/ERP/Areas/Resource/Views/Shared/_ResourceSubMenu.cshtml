@model ERP.Resource.ViewModels.ResourceSubMenuBO
@*It displays the "FirstName" and "LastName"*@
<div class="form-horizontal">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4 text-left">
            <b style="font-family:'Times New Roman';color:forestgreen;font-size:20px;">
                @*@Html.DisplayName("Welcome ")*@
                @Html.DisplayName("Name: ")
                @Html.DisplayFor(model => model.FName)
                @Html.DisplayFor(model => model.LName)
                @*<img src="@Url.Content("~/Content/dist/img/green-smiley-face.jpg")" width="30" height="30" />*@
            </b>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3 text-right">
            <b style="font-family:'Times New Roman';color:forestgreen;font-size:20px">
                @Html.DisplayName("ID : ")
                @Html.DisplayFor(model => model.EmployeeID)
            </b>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
@*Ends*@

