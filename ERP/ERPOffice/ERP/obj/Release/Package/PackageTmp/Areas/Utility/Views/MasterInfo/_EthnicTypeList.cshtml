@model IEnumerable<ERP.Utility.Models.EthnicTypeBO>
<br />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(m => m.EthGrpName)
            </th>
            
            <th>                
            </th>
        </tr>


    </thead>
    @if (Model.Count() > 0)
    {
        foreach (var eth in Model)
        {
            <tr>
                <td>
                    <a data-toggle="tooltip" title="Edit Ethnic" role="button" onclick="EditEthnicType(@eth.EthGrpID)" id="edit"><span class="glyphicon glyphicon-pencil text-success"></span></a>
                </td>
                <td>
                    @Html.DisplayFor(m => eth.EthGrpName)
                </td>
                
                <td>
                    <a data-toggle="tooltip" title="Delete Ethnic" role="button" onclick="DeleteEthnicType(@eth.EthGrpID)"><span class="glyphicon glyphicon-trash text-danger"></span></a>

                </td>


            </tr>
        }
    }
    else {
        <tr>
            <td align="center" colspan=15>
                <center>
                    <font color="red" ; style="text-align:center">"Sorry, No Ethnic Names are found!!."</font>
                </center>
            </td>

        </tr>
    }
</table>




