@model IEnumerable<ERP.Utility.Models.ResourceHolidayTypeBO>
<br />

<table class="table">
    <thead>
        <tr>
            <th></th>  
            <th>
                @Html.DisplayNameFor(model => model.HolidayTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AbbriviatedHolidayType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IconCode)
            </th>
            <th></th>
        </tr>
    <thead>
@if (Model.Count() != 0 || Model != null)
{
    foreach (var item in Model)
    {
        string color = item.IconCode;
            <tr>
                <td>
                    <a data-toggle="tooltip" title="Edit Holiday Type" role="button" onclick="EditHolidayType(@item.HolidayTypeID)" id="edit"><span class="glyphicon glyphicon-pencil text-success"></span></a>
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.HolidayTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AbbriviatedHolidayType)
                </td>
                <td style="background-color:@color">
                    @*@Html.DisplayFor(modelItem => item.IconCode)*@
                </td>
                <td>
                    <a data-toggle="tooltip" title="Delete Holiday Type" role="button" onclick="DeleteHolidayType(@item.HolidayTypeID)"><span class="glyphicon glyphicon-trash text-danger"></span></a>
                </td>
            </tr>
        }
}
else
{
    <tr>
        <td align="center" colspan=15>
            <center>
                <font color="red" ; style="text-align:center">"Sorry, No Title found!!."</font>
            </center>
        </td>

    </tr>
}
</table>
