@model IEnumerable<ERP.Utility.Models.TitleBO>
<br />

<table class="table">
    <thead>
        <tr>
            <th></th>          
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
        @if (Model.Count() != 0 || Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a data-toggle="tooltip" title="Edit Title" role="button" onclick="EditTitle(@item.TitleID)" id="edit"><span class="glyphicon glyphicon-pencil text-success"></span></a>
                    </td>                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <a data-toggle="tooltip" title="Delete Title" role="button" onclick="DeleteTitle(@item.TitleID)"><span class="glyphicon glyphicon-trash text-danger"></span></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td align="center" colspan=15>
                    <center>
                        <font color="red" ; style="text-align:center">"Sorry, No Title found!!."</font>
                    </center>
                </td>

            </tr>
        }
</table>
