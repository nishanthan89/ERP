@model IEnumerable<ERP.Utility.Models.MaritalTypeBO>
<br />
<table class="table">
    <thead>
        <tr>
            <th></th>                           
            <th>
                @Html.DisplayNameFor(m => m.MaritalStatus)
            </th>           
           <th> </th>                          
        </tr>
    </thead>
    @if (Model.Count() > 0)
    {
        foreach (var eth in Model)
        {
            <tr>
                <td>
                    <a data-toggle="tooltip" title="Edit Marital Status" role="button" onclick="EditMarital(@eth.MaritalId)" id="edit"><span class="glyphicon glyphicon-pencil text-success"></span></a>
                </td>
                <td>
                    @Html.DisplayFor(m =>eth.MaritalStatus)
                </td>
                
                <td>
                    <a data-toggle="tooltip" title="Delete Marital Status" role="button" onclick="DeleteMarital(@eth.MaritalId)"><span class="glyphicon glyphicon-trash text-danger"></span></a>
                </td>
            </tr>
        }
    }
    else {

        <tr>
            <td align="center" colspan=15>
                <center>
                    <font color="red" ; style="text-align:center">"Sorry, No Marital Status  are found!!."</font>
                </center>
            </td>

        </tr>
    }
</table>
