                            <a data-toggle="tooltip" title="Delete Shift Pattern" role="button" onclick="DeleteShiftPattern(@item.ShiftPatternID)"><span class="glyphicon glyphicon-trash text-danger"></span></a>
                        </td>
                    </tr>
                }
            }
