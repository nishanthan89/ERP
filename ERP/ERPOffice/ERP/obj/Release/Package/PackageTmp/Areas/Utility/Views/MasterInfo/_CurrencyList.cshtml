@model IEnumerable<ERP.Utility.Models.CurrencyBO>
<br />

<table class="table">
    <thead>
        <tr>
            <th></th>           
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th></th>
        </tr>
        </thead>
       @if (Model.Count() != 0 || Model != null)
       {
           foreach (var item in Model)
           {
                 <tr>
                     <td>
                         <a data-toggle="tooltip" title="Edit currency format" role="button" onclick="EditCurrency(@item.CurrencyID)" id="edit"><span class="glyphicon glyphicon-pencil text-success"></span></a>
                     </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                     <td>
                         <a data-toggle="tooltip" title="Delete Currency format" role="button" onclick="DeleteCurrency(@item.CurrencyID)"><span class="glyphicon glyphicon-trash text-danger"></span></a>
                     </td>
            </tr>
           }
       }
       else
       {
        <tr>
            <td align="center" colspan=15>
                <center>
                    <font color="red" ; style="text-align:center">"Sorry, No Currency format found!!."</font>
                </center>
            </td>

        </tr>
       }
</table>
