@model IEnumerable<ERP.Utility.Models.NationalityBO>

<br />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.NationalityName)
            </th>
            <th></th>
        </tr>
    </thead>
        @if (Model.Count() != 0 || Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a data-toggle="tooltip" title="Edit Nationality" role="button" onclick="EditNationality(@item.NationalityID)" id="edit"><span class="glyphicon glyphicon-pencil text-success"></span></a>&nbsp;
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NationalityName)
                    </td>
                    <td>
                        <a data-toggle="tooltip" title="Delete Nationality" role="button" onclick="DeleteNationality(@item.NationalityID)"><span class="glyphicon glyphicon-trash text-danger"></span></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td align="center" colspan=15>
                    <center>
                        <font color="red" ; style="text-align:center">"Sorry, No Nationality found!!."</font>
                    </center>
                </td>

            </tr>
        }
</table>
