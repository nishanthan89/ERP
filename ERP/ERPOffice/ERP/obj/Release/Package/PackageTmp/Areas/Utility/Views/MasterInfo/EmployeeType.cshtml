                                 });
                         $.post('@Url.Action("GetTypeList", "MasterInfo")',
                                function (result) {
                                    $("#TypeList").html(result);
                                });
                     },
                     error: function (data) {
                         alert("error Loading the data");
                     }
                 })
             }
         })
    }
